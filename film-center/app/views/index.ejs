  <meta name="twitter:image" content="<%= coverPhoto %>" />
  <meta name="twitter:title" content="<%= sharingTitle %>" />
  <meta name="twitter:description" content="<%= articleSubtitle  %>" />

  <base href="https://www.twreporter.org/a/film-center/" />

  <title>
    <%= sharingTitle %>
  </title>

  <!-- favicon.ico -->
  <link href="https://www.twreporter.org/asset/favicon.png" rel="shortcut icon" />

  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick-theme.css"/>

