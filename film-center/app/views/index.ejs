<body class="article">
  <!--[if lt IE 10]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
  <div class="donation-icon">
    <a href="https://twreporter.org/donation/period" onClick="ga('send', 'event', 'menu', 'click', 'film-center-donate-btn');" target="_blank"><img src="images/icon-donation.svg" class="img-shadow" /></a>
  </div>

  <div class="nav-icons">
    <div class="reporter-logo">
      <a href="https://www.twreporter.org/"><img src="https://dh1rvgpokacch.cloudfront.net/atavist/60826/image/derivative/cropandscale~64x64x0x0~favicon-1450079771-87.png" class="img-shadow" /></a>
    </div>
  </div>

  <div id="header" class="cover-photo">
    <div class="gradient-overlay">
      <h1 class="container"><%- articleTitle  %></h1>
      <h2 id="subtitle" class="container"><%= articleSubtitle  %></h3>
    </div>
  </div>

  <div id="cover-video" class="fit-screen">
    <!-- <iframe id="video" src="https://www.youtube.com/embed/zmtTBCqGNpw?rel=0" frameborder="0" allowfullscreen></iframe> -->
    <div id="player"></div>
    <div class="row text-center">
      <small class="pad-small">封面圖片與影片來源： 國家電影中心</small>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-12 pad-bottom-small margin-v-small">
        <%- include ../partials/paragraph1 %>
      </div>
    </div>
  </div>

  <div id="g-earth">
    <div class="fit-screen">
      <div id="g-earth-box" class="canvas-box">
        <canvas id="gEarthCanvas" class="fit-canvas"></canvas>
        <div class="gray-overlay"></div>
      </div>
    </div>
    <div id="earth-description" class="description">
        <div class="description-box" id="earth-desc-1">
          <img src="images/earthIcon1.png" srcset="images/earthIcon1.png 1x, images/earthIcon1_large.png 2x">
          <div class="container">
            <p><%= earthText01 %></p>
            <p><%= earthText02 %></p>
          </div>
        </div>
        <div class="description-box" id="earth-desc-2">
          <div class="container">
            <p><%= earthText11 %></p>
            <p><%= earthText12 %></p>
          </div>
        </div>
      </div>
  </div>

  <div id="pre-process" class="container margin-v">
    <div class="row text-center">
      <small class="pad-small pad-bottom">影像來源： Google Earth</small>
      <br/><br/><br/>
    </div>
    <div class="row">
      <div class="col-lg-12 margin-top">
        <%- include ../partials/paragraph2 %>
      </div>
    </div>
  </div>

  <div id="restorationBox1" class="fit-screen restoration-container">
    <div class="canvas-box">
       <canvas id="process1" class="fit-canvas"></canvas>
      <div class="gray-overlay"></div>
    </div>
    <div class="container description">
      <h4><%= processTitle1 %></h4>
      <span><%= processDescription1 %></span>
    </div>
  </div>
  <div id="restorationBox2" class="fit-screen restoration-container">
    <div class="canvas-box">
       <canvas id="process2" class="fit-canvas"></canvas>
      <div class="gray-overlay"></div>
    </div>
    <div class="container description">
      <h4><%= processTitle2 %></h4>
      <span><%= processDescription2 %></span>
    </div>
  </div>
  <div id="restorationBox3" class="fit-screen restoration-container">
    <div class="canvas-box">
       <canvas id="process3" class="fit-canvas"></canvas>
      <div class="gray-overlay"></div>
    </div>
    <div class="container description">
      <h4><%= processTitle3 %></h4>
      <span><%= processDescription3 %></span>
    </div>
  </div>
  <div id="restorationBox4" class="fit-screen restoration-container">
    <div class="canvas-box">
       <canvas id="process4" class="fit-canvas"></canvas>
      <div class="gray-overlay"></div>
    </div>
    <div class="container description">
      <h4><%= processTitle4 %></h4>
      <span><%= processDescription4 %></span>
    </div>
  </div>

  <div class="container margin-v">
    <div class="row">
      <div class="col-lg-12">
        <%- include ../partials/paragraph3 %>
      </div>
    </div>
  </div>

  <div id="img-slider" class="container">
    <div id="photo-slick" class="container margin-v">
      <div><img class="img-responsive" src="images/slideshow/01.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/02.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/03.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/04.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/05.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/06.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/07.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/08.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/09.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/10.jpg"></div>
      <div><img class="img-responsive" src="images/slideshow/11.jpg"></div>
    </div>
  </div>

  <div class="ai2html-container">
    <%- include ../partials/ai2html %>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%- include ../partials/paragraph4 %>
      </div>
    </div>
  </div>



 <!-- 360 degree viewer -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center" id="panolens-viewer">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="panolens.html"></iframe>
        </div>
        <p class="margin-v-small"><small><%= panoramaDescription %></small></p>
      </div>
    </div>
  </div>


<footer class='footer btm-footer'>
  <div class="container">

    <div class="row text-center margin-v">
      <div class="left">
        <a href="https://twreporter.org/donation/period" target="_blank">
                    <img src="images/icon-donation.svg" class="img-shadow" />
                      贊助我們
                  </a>
      </div>
      <div class="right">
        <div class="share-facebook inline" style="margin-top:15px;">
          <a href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.twreporter.org%2Fa%2Ffilm-center" onclick="window.open(this.href,'targetWindow','toolbar=no,location=no,status=no,menubar=no,scrollbars=yes,resizable=yes,width=400,height=600'); return false;">
